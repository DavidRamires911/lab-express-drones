<h2>Available drones</h2>

{{#each drones}}
    <section>
        <h2>{{this.name}}</h2>
        <p>Number of propellers: {{this.propellers}}</p>
        <p>Maximum Speed: {{this.maxSpeed}}</p>
        <a href="/drones/{{this._id}}/edit">Edit</a>
    </section>

    <form action="/drones/{{this._id}}/delete" method="POST">
      <button>Delete</button>
    </form>

{{/each}}